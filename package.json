{
	"name": "towncleaner",
	"version": "1.0.0",
	"main": "src/app.ts",
	"license": "MIT",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "yarn tsc && tsc-alias",
		"start": "yarn build && pm2 start dist/app.js --watch",
		"dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register --files' src/app.ts"
	},
	"dependencies": {
		"@prisma/client": "^4.3.1",
		"argon2": "^0.29.1",
		"cors": "^2.8.5",
		"express": "^4.18.1",
		"joi": "^17.6.2",
		"jsonwebtoken": "^8.5.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pm2": "^5.2.0",
		"prisma": "^4.3.1",
		"reflect-metadata": "^0.1.13",
		"typedi": "^0.10.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^18.7.14",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.34",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.2",
		"jest": "^29.1.2",
		"nodemon": "^2.0.19",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.7.0",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.8.2"
	}
}